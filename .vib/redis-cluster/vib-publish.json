{
  "phases": {
    "package": {
      "context": {
        "resources": {
          "url": "{SHA_ARCHIVE}",
          "path": "/bitnami/redis-cluster"
        }
      },
      "actions": [
        {
          "action_id": "helm-package"
        },
        {
          "action_id": "helm-lint"
        }
      ]
    },
    "verify": {
      "context": {
        "resources": {
          "url": "{SHA_ARCHIVE}",
          "path": "/bitnami/redis-cluster"
        },
        "target_platform": {
          "target_platform_id": "{VIB_ENV_TARGET_PLATFORM}",
          "size": {
            "name": "S4"
          }
        }
      },
      "actions": [
        {
          "action_id": "health-check",
          "params": {
            "endpoint": "lb-redis-cluster-tcp-redis"
          }
        },
        {
          "action_id": "goss",
          "params": {
            "resources": {
              "path": "/.vib"
            },
            "tests_file": "redis-cluster/goss/goss.yaml",
            "vars_file": "redis-cluster/runtime-parameters.yaml",
            "remote": {
              "pod": {
                "workload": "sts-redis-cluster"
              }
            }
          }
        },
        {
          "action_id": "ginkgo",
          "params": {
            "resources": {
              "path": "/.vib/redis-cluster/ginkgo"
            },
            "params": {
              "kubeconfig": "{{kubeconfig}}",
              "namespace": "{{namespace}}",
              "name": "redis-cluster",
              "password": "ComplicatedPassword123!4"
            }
          }
        }
      ]
    },
    "publish": {
      "actions": [
        {
          "action_id": "helm-publish",
          "params": {
            "repository": {
              "kind": "S3",
              "url": "{VIB_ENV_S3_URL}",
              "authn": {
                "access_key_id": "{VIB_ENV_S3_ACCESS_KEY_ID}",
                "secret_access_key": "{VIB_ENV_S3_SECRET_ACCESS_KEY}"
              }
            }
          }
        }
      ]
    }
  }
}
